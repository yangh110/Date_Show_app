<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 整体垂直布局-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <!-- 头部标题-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:gravity="center_vertical|end"
        android:background="#33AECC"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="水产养殖系统当前数据"
            android:textSize="20sp"

            />

    </LinearLayout>

    <!-- 中部数据显示-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="7"
        android:orientation="horizontal"
        android:background="#A8A8A8"
        >
        <!--二级分割 -->
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"

            >
                <!--三级分割-->
            <!--第一块-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"

                >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="编号1"
                        android:textSize="40sp"
                        android:id="@+id/tv_1_0"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1:"
                        android:textSize="20sp"
                        android:layout_gravity="left"
                        android:id="@+id/tv_1_1"
                        android:layout_below="@+id/tv_1_0"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2:"
                        android:textSize="20sp"
                        android:layout_gravity="left"
                        android:id="@+id/tv_1_2"
                        android:layout_below="@+id/tv_1_1"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3:"
                        android:textSize="20sp"
                        android:layout_gravity="left"
                        android:id="@+id/tv_1_3"
                        android:layout_below="@+id/tv_1_2"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4:"
                        android:layout_gravity="left"
                        android:textSize="20sp"
                        android:id="@+id/tv_1_4"
                        android:layout_below="@+id/tv_1_3"
                        />

                    <TextView
                        android:id="@+id/tv_1_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_1_4"
                        android:layout_gravity="left"
                        android:text="5:"
                        android:textSize="20sp" />

                </RelativeLayout>
            <!--第二块-->
                <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="编号2"
                    android:textSize="40sp"
                    android:id="@+id/tv_2_0"
                    />

                    <TextView
                        android:id="@+id/tv_2_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_2_0"
                        android:layout_gravity="left"
                        android:text="1:"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_2_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_2_1"
                        android:layout_gravity="left"
                        android:text="2:"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_2_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_2_2"
                        android:layout_gravity="left"
                        android:text="3:"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_2_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_2_3"
                        android:layout_gravity="left"
                        android:text="4:"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_2_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_2_4"
                        android:layout_gravity="left"
                        android:text="5:"
                        android:textSize="20sp" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            >
                <!--三级分割-->
            <!--第三块-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="编号3"
                    android:textSize="40sp"
                    android:id="@+id/tv_3_0"
                    />

                <TextView
                    android:id="@+id/tv_3_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_3_0"
                    android:layout_gravity="left"
                    android:text="1:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_3_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_3_1"
                    android:layout_gravity="left"
                    android:text="2:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_3_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_3_2"
                    android:layout_gravity="left"
                    android:text="3:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_3_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_3_3"
                    android:layout_gravity="left"
                    android:text="4:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_3_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_3_4"
                    android:layout_gravity="left"
                    android:text="5:"
                    android:textSize="20sp" />

            </RelativeLayout>
            <!--第四块-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="编号4"
                    android:textSize="40sp"
                    android:id="@+id/tv_4_0"
                    />

                <TextView
                    android:id="@+id/tv_4_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_4_0"
                    android:layout_gravity="left"
                    android:text="1:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_4_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_4_1"
                    android:layout_gravity="left"
                    android:text="2:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_4_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_4_2"
                    android:layout_gravity="left"
                    android:text="3:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_4_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_4_3"
                    android:layout_gravity="left"
                    android:text="4:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_4_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_4_4"
                    android:layout_gravity="left"
                    android:text="5:"
                    android:textSize="20sp" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>




    <!-- 底部刷新按钮-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:gravity="center"
        android:background="#030303"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:fadeScrollbars="false"
            android:gravity="center"
            android:text=""
            android:textColor="#FFFFFF"

            android:textSize="20sp"
            android:id="@+id/tv_end"
            />



    </LinearLayout>

</LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>